  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const musicButton = document.getElementById('music-toggle');
      let musicPlaying = false;
      
      // Fun√ß√£o para controlar a m√∫sica
      musicButton.addEventListener('click', function() {
        if (!musicPlaying) {
          // Criar novo iframe para iniciar a m√∫sica
          const iframe = document.getElementById('youtube-player');
          iframe.src = 'https://www.youtube.com/embed/DkVCb-81KFU?si=xQ_uD2AUjGjx4A_A&autoplay=1&loop=1&playlist=DkVCb-81KFU';
          musicButton.innerHTML = 'üîá';
          musicButton.title = 'Pausar m√∫sica';
        } else {
          // Pausar m√∫sica
          const iframe = document.getElementById('youtube-player');
          iframe.src = 'https://www.youtube.com/embed/DkVCb-81KFU?si=xQ_uD2AUjGjx4A_A&autoplay=0';
          musicButton.innerHTML = 'üéµ';
          musicButton.title = 'Tocar m√∫sica';
        }
        musicPlaying = !musicPlaying;
      });
    });
  </script>
